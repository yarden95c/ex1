        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientWpf.MultiPlayer"
        mc:Ignorable="d"
         xmlns:controls="clr-namespace:ClientWpf"
        Title="multiPlayerWindow" Height="300" Width="300">
    <Grid>
        <controls:DetailesController x:Name="detailsControl" Margin="48,109,53,67" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="startGameButton" Content="Start Game" HorizontalAlignment="Center" Margin="76,216,0,0" VerticalAlignment="Center" Width="95" Height="24" Click="StartGameButton_Click"/>
